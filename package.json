{
  "name": "rgbee",
  "version": "0.0.1",
  "description": "bzz bzz",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn serve",
    "build": "yarn build-ts && yarn lint",
    "clean": "rm -rf dist/",
    "clean:logs": "rm -rf logs/",
    "clean:modules": "rm -rf node_modules/",
    "serve": "node dist/src/server.js",
    "watch-node": "nodemon dist/src/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "watch-test": "yarn test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix && prettier --write src/",
    "debug": "yarn build && yarn watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn serve-debug\"",
    "db:migrate:latest": "knex migrate:latest",
    "db:migrate:rollback": "knex migrate:rollback"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@koa/cors": "^3.0.0",
    "@koa/router": "^8.0.8",
    "argon2": "^0.26.2",
    "dotenv": "^8.2.0",
    "knex": "^0.20.15",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^5.2.0",
    "koa-morgan": "^1.0.1",
    "koa-passport": "^4.1.3",
    "koa-session": "^5.13.1",
    "objection": "^2.1.3",
    "passport-local": "^1.0.0",
    "pg": "^8.0.2",
    "winston": "^3.2.1",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@types/concurrently": "^5.1.0",
    "@types/eslint": "^6.8.0",
    "@types/hapi__joi": "^17.1.0",
    "@types/jest": "^25.2.3",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^5.2.0",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-session": "^5.10.2",
    "@types/koa__router": "^8.0.2",
    "@types/node": "^13.11.1",
    "@types/nodemon": "^1.19.0",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^7.14.3",
    "@types/zxcvbn": "^4.4.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "concurrently": "^5.1.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "_moduleDirectories": [
    "src"
  ]
}
